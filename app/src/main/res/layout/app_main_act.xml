<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.huchiwei.gankessence.modules.nav.NavViewPaper
        android:id="@+id/nav_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_bottomBar">
    </com.huchiwei.gankessence.modules.nav.NavViewPaper>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/nav_bottomBar"

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_bar_bg"
        app:bb_tabXmlResource="@xml/bottom_bar"
        app:bb_behavior="shifting"
        app:bb_inActiveTabColor="@color/bottom_bar_inactive"
        app:bb_activeTabColor="@color/colorPrimary"/>
</RelativeLayout>
